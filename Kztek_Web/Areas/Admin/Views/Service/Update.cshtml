

@model Kztek_Model.Models.tbl_Event_Cus

@{

    ViewBag.Title = "Thông tin xe làm dịch vụ";
    var controller = "Service";
    var action = "Confirm";

}

<div class="page-header">
    <h1>
        @ViewBag.Title
    </h1>
</div>
<style>

    .offset-md-3 {
        margin-left: 200px;
    }

    .ragge {
        margin-left: 200px;
    }

    .btnCancel {
        background-color: #c00000 !important;
        border-color: #c00000;
        display: inline-block;
        /* margin-bottom: 0;*/
        font-weight: 400;
        width: 200px;
        text-align: center;
        /*  vertical-align: middle;*/
        touch-action: manipulation;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 10px 10px;
        white-space: nowrap;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        user-select: none;
        color: #FFF !important;
        text-shadow: 0 -1px 0 rgb(0 0 0 / 25%);
        background-image: none !important;
        border: 5px solid #FFF;
        position: relative;
    }

    .btnService {
        background-color: #385822 !important;
        border-color: #385822;
        border: 1px solid transparent;
        border-radius: 10px 10px;
        font-weight: 400;
        width: 200px;
        text-align: center;
        /*  vertical-align: middle;*/
        touch-action: manipulation;
        cursor: pointer;
        white-space: nowrap;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        /* border-radius: 2px 4px;*/

        user-select: none;
        color: #FFF !important;
        text-shadow: 0 -1px 0 rgb(0 0 0 / 25%);
        background-image: none !important;
        border: 5px solid #FFF;
        position: relative;
    }

    .breadcrumb, .breadcrumb > li > a, .btn {
        display: inline-block;
    }
    }
</style>
<div class="row">
    @if (TempData["Success"] != null)
    {
        <strong style="color:green">@TempData["Success"]</strong>
    }
    <strong style="color:red">@ViewBag.Error</strong>
</div>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Update", "Service", FormMethod.Post, new { encType = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
        {
            @Html.HiddenFor(n => n.Id)
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @*@Html.Hidden("LaneID", Model.Model.id.ToString())*@
            @Html.Hidden("AreaCode", (string)ViewBag.AreaCodeValue)

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Xe Việt Nam </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("plateVN", Model.plateVN, new { @class = "form-control", @placeholder = "biển số xe VN"@*, @disabled = "disabled"*@ })
                    @Html.ValidationMessage("plateVN", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Xe Trung Quốc </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("plateCN", Model.plateCN, new { @class = "form-control", @placeholder = "Biển số xe TQ"@*, @disabled = "disabled"*@ })
                    @Html.ValidationMessage("plateCN", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Loại hàng </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("productType", Model.productType, new { @class = "form-control", @placeholder = "Loại hàng" })
                    @Html.ValidationMessage("productType", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Khối lượng hàng </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("weight", Model.weight, new { @class = "form-control", @placeholder = "Khối lượng" })
                    @Html.ValidationMessage("weight", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Loại xe </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("vehicleType", Model.vehicleType, new { @class = "form-control", @placeholder = "Loại xe" })
                    @Html.ValidationMessage("vehicleType", "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Số trang </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("serviceCode", Model.serviceCode, new { @class = "form-control", @placeholder = "Số trang" })
                    @Html.ValidationMessage("serviceCode", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right"> Nhóm hàng hóa </label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("productGroup", Model.productGroup, new { @class = "form-control", @placeholder = "Nhóm hàng hóa" })
                    @Html.ValidationMessage("productGroup", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Dịch vụ</label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("service", Model.service, new { @class = "form-control", @placeholder = "Nhóm hàng hóa" })
                    @Html.ValidationMessage("service", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Giá DV</label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("price", Model.price, new { @class = "form-control", @placeholder = "Giá DV" })
                    @Html.ValidationMessage("price", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Phụ thu</label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextBox("subPrice", Model.subPrice, new { @class = "form-control", @placeholder = "Phụ thu" })
                    @Html.ValidationMessage("subPrice", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Tổ bốc xếp</label>
                <div class="col-sm-3 col-xs-12">
                    @await Component.InvokeAsync("ChosenSelect", ViewBag.AllGroup)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">Ghi chú</label>
                <div class="col-sm-3 col-xs-12">
                    @Html.TextArea("description", Model.description, new { @class = "form-control", @placeholder = "Miêu tả" })
                    @Html.ValidationMessage("description", "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="mt-5 border-t-1 bgc-secondary-l4 brc-secondary-l2 py-35 mx-n25">*@
            @*<div class="row">
                <div class="mt-5 border-t-1 bgc-secondary-l4 brc-secondary-l2 py-35 mx-n25">
                    <div class="offset-md-3 col-md-9 text-nowrap">
                        <button class="btnService  btn-bold px-4" type="submit">
                            <i class="fa fa-check mr-1"></i>
                            Xác nhận
                        </button>

                        <a class="btnCancel ragge btn-bold px-4" href="/Admin/Service/Index">
                            <i class="fa fa-undo mr-1"></i>
                            Hủy bỏ
                        </a>
                    </div>
                </div>
            </div>*@

            @await Html.PartialAsync("~/Views/Shared/Partials/ButtonPartial.cshtml", new Kztek_Library.Models.AuthPartialModel()
            {
          ControllerName = controller,
          ActionName = action,
          RecordId = "",
          model = new { AreaCode = ViewBag.AreaCodeValue },
          Auth_Value = null
      })
        }
    </div>
</div>
@section scripts{
    <script src="~/js/ext/price_format.js"></script>
    <script>

        $('#price').priceFormat({
            prefix: '',
            centsLimit: 0,
            centsSeparator: ',',
            thousandsSeparator: '.'
        });
        $('#subPrice').priceFormat({
            prefix: '',
            centsLimit: 0,
            centsSeparator: ',',
            thousandsSeparator: '.'
        });

    </script>

}
