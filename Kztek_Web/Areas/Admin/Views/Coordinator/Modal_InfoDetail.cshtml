
@model Kztek_Model.Models.tbl_Event


<div id="ModalInforDetail" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Xác nhận hoàn thành dịch vụ
                </h4>
            </div>
            <div class="modal-body">
                <form id="@string.Format("frmInfo")" class="form-horizontal">
                    @Html.Hidden("serId", Model.Id)
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0 ">
                                    <label for="id-form-field-name" class="mb-0">
                                        Số trang
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control " name="txtServiceCode" value="@Model.ServiceCode" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                    <label for="id-form-field-name" class="mb-0">
                                        Biển số VN
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control disabled" value="@Model.PlateVN" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                    <label for="id-form-field-name" class="mb-0">
                                        Biển số CN
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control disabled" value="@Model.PlateCN" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                    <label for="id-form-field-name" class="mb-0">
                                        Loại xe
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control " name="txtVehicleType" value="@Model.VehicleType" disabled />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                    <label for="id-form-field-name" class="mb-0">
                                        Số kiện
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="number" min="0" class="form-control " name="txtPackageNumber" value="@Model.PackageNumber" disabled />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                    <label for="id-form-field-name" class="mb-0">
                                        Khối lượng
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control disabled" name="txtWeight" value="@Model.Weight" disabled />
                                </div>
                            </div>
                            @if (Model.EventType == 5)
                            {
                                <div class="form-group row">
                                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                        <label for="id-form-field-name" class="mb-0">
                                            Ghi chú
                                        </label>
                                    </div>
                                    <div class="col-sm-9">
                                        <textarea id="Description" name="Description" class="form-control ">@Model.Description</textarea>
                                        @*<input type="text" class="form-control" name="txtWeight" value="@Model.Description" />*@
                                    </div>
                                </div>
                            }
                            else if (Model.EventType == 6)
                            {
                                <div class="form-group row">
                                    <div class="col-sm-3 col-form-label text-sm-right pr-0">
                                        <label for="id-form-field-name" class="mb-0">
                                            Ghi chú
                                        </label>
                                    </div>
                                    <div class="col-sm-9">
                                        <textarea id="Description" name="Description" class="form-control " disabled>@Model.Description</textarea>
                                        @*<input type="text" class="form-control" name="txtWeight" value="@Model.Description" />*@
                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" style="background-color: #c00000 !important;border-color: #c00000 !important" id="btnClose" data-dismiss="modal">Hủy</button>
             
            </div>
        </div>

    </div>
</div>


